<Window x:Class="Affin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Affin"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Loaded="MainWindow_Loaded">
    <Grid Margin="0,-23,0,-32">
        <Canvas x:Name="drawCanvas" Height="400" Width="750" Background="Transparent" MouseLeftButtonUp="CanvasClick" Margin="25,61,25,23"></Canvas>
        <Button x:Name ="startButton" Content="Старт" HorizontalAlignment="Left" Height="17" Margin="544,62,0,0" VerticalAlignment="Top" Width="190" Click="start"/>
        <Button x:Name ="clearButton" Content="Очистить" HorizontalAlignment="Left" Height="17" Margin="544,26,0,0" VerticalAlignment="Top" Width="190" Click="clear"/>
        <CheckBox x:Name ="sequance" Content="Начало след. линии конец предыдущей" HorizontalAlignment="Left" Margin="57,62,0,0" VerticalAlignment="Top" Unchecked="sequance_Checked"/>
        <Button x:Name ="rotateButton" Content="Повернуть" HorizontalAlignment="Left" Height="17" Margin="331,26,0,0" VerticalAlignment="Top" Width="190" Click="rotateButton_Click"/>
        <TextBox x:Name="angleInput" HorizontalAlignment="Left" Margin="104,26,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Угол" HorizontalAlignment="Left" Margin="48,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.123,-0.14"/>
    </Grid>
</Window>
